<form action = "/blog/update/<%= @post.id%>" method = 'post'>
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <div class = "form-group">
    <label>제목</label>
    <input type="text" name = 'title'class="form-control" placeholder="제목을 입력하세요" value = "<%= @post.title %>">
  </div>
  <div class = "form-group">
    <label>내용</label>
    <textarea class="form-control" name = 'content' rows="20" placeholder="내용을 입력하세요"><%= @post.content %></textarea>
  </div>
  <div class = "form-actions">
    <input class="btn btn-default" type="submit" value="Submit">
  </div>
</form>
